						<nb_column2 translate="label">
		            		<label># Column</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>basenews/system_config_source_listColumn</source_model>
		            		<comment>For devices have screen width from 768px up to 1199px.</comment>
		            		<sort_order>25</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
