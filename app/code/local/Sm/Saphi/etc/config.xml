<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Saphi>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Saphi>
	</modules>
	<global>
		<helpers>
		  <saphi>
			<class>Sm_Saphi_Helper</class>
		  </saphi>
		</helpers>
		<models>
		  <saphi>
			<class>Sm_Saphi_Model</class>
		  </saphi>
		</models>		
	</global>
	<adminhtml>
        <translate>
            <modules>
                <Sm_Saphi>
                    <files>
                        <default>Sm_Saphi.csv</default>
                    </files>
                </Sm_Saphi>
            </modules>
        </translate>
	</adminhtml>	
 	<default>
		<saphi_cfg module="saphi">
			<general>
				<showcpanel>1</showcpanel>
				<color>default</color>
				<body_background_color>#fff</body_background_color>
				<body_link_color>#909090</body_link_color>
				<body_text_color>#909090</body_text_color>
				<menu_styles>1</menu_styles>
				<google_font></google_font>
				<google_font_targets></google_font_targets>
				<body_font_size>12px</body_font_size>
				<body_font_family>arial</body_font_family>
				<responsive_menu>selectbox</responsive_menu>
			</general>
		</saphi_cfg>
	</default> 
</config> 